<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etVoornaam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Voornaam"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etAchternaam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Achternaam"
        android:inputType="textPersonName"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnCreateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Users"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etUserDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter users in format: (voornaam, achternaam), ..."
        android:inputType="textMultiLine"
        android:lines="5"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCreateUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Users"
        android:textAllCaps="false"/>

</LinearLayout>
